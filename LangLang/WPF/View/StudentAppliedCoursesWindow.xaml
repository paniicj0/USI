<Window x:Class="LangLang.View.StudentAppliedCoursesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="StudentAppliedCoursesWindow_Load"
        Title="StudentAppliedCoursesWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgCourse" Height="200" Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Courses that you applied for" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Height="35" FontSize="20"/>
        <Button x:Name="btnCancelRequest" Content="Cancel the request for the course" HorizontalAlignment="Left" Margin="50,360,0,0" VerticalAlignment="Top" Height="35" FontSize="20" Click="btnCancelRequest_Click" Width="300"/>
        <Button x:Name="btnDropOut" Content="Drop out of the course" HorizontalAlignment="Right" Margin="0,360,50,0" VerticalAlignment="Top" Height="35" FontSize="20" Click="btnDropOut_Click" Width="300"/>
    </Grid>
</Window>
