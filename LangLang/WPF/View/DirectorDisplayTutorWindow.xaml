<Window x:Class="LangLang.View.DirectorDisplayTutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        Loaded="LoadDataFromCSV"
        Title="Display Tutor" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen">


    <Grid>
        <Label x:Name="lblTitle" Content="Tutors"  HorizontalAlignment="Center" Height="35" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="20" ></Label>
        <DataGrid x:Name="dgvTutor" Margin="0,50,0,0" SelectionChanged="dgvTutor_SelectionChanged" FontSize="18"/>

        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Height="35" Margin="350,500,0,97" Width="140" FontSize="20"  Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Height="35" Margin="700,500,0,97" Width="140" FontSize="20"  Click="btnDelete_Click"/>


    </Grid>
</Window>
