<Window x:Class="LangLang.View.StudentsCourseOngoingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        Loaded="StudentsCourseOngoingWindow_Loaded"
        Title="Students" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Label Content="Students:" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Height="35" FontSize="20"/>

        <DataGrid x:Name="dgvStudents" Height="200" Margin="0,50,0,0"  HorizontalAlignment="Center" CanUserResizeRows="False" CanUserResizeColumns="False"  SelectedCellsChanged="dgvStudents_SelectedCellsChanged" SelectionMode="Single"/>

        <Button x:Name="btnPenaltyPoint" Content="Give a penalty point." HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top"  FontSize="20" Click="btnPenaltyPoint_Click"/>
            
    </Grid>
</Window>
