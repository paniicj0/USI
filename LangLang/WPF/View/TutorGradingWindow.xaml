<Window x:Class="LangLang.View.TutorGradingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
       Loaded="TutorGradingWindow_Loaded"
        Title="Finished Courses" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Student Grades Overview:" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Height="35" FontSize="20"/>

        <DataGrid x:Name="dgvStudents" Height="200" Margin="0,30,0,0" HorizontalAlignment="Center" SelectedCellsChanged="dgvStudents_SelectedCellsChanged"/>
        <Button x:Name="btnGrade" Content="Grade this student" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top"  FontSize="20" Click="btnGrade_Click"/>
    </Grid>
</Window>
