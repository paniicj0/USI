<Window x:Class="LangLang.View.StudentDeclineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="StudentDeclineWindow" Height="300" Width="500">
    <Grid>
        <Label Content="Are you sure you want to decline?" HorizontalAlignment="Center" Height="47" Margin="0,70,0,0" VerticalAlignment="Top"  FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="txtReason" HorizontalAlignment="Center" Height="68" Margin="0,120,0,0" VerticalAlignment="Top" Width="400" Text="Enter reason for declining..." />

        <Button Content="Yes" HorizontalAlignment="Left" Height="20" Margin="90,193,0,0" VerticalAlignment="Top" Width="100" Click="Button_Yes"/>
        <Button Content="No" HorizontalAlignment="Left" Height="20" Margin="245,193,0,0" VerticalAlignment="Top" Width="100" Click="Button_No"/>
    </Grid>
</Window>
