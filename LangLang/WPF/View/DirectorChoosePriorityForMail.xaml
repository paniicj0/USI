<Window x:Class="LangLang.View.DirectorChoosePriorityForMail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="DirectorChoosePriorityForMail" Height="250" Width="500">
    <Grid>
        <Label Content="Choose priority for sending mail to the best students:" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="40" FontSize="20"/>
        <Button x:Name="KnowledgeBtn" Content="Knowledge" HorizontalAlignment="Center" Margin="-200,150,0,0" VerticalAlignment="Top" Height="35" FontSize="20" Width="110" Click="KnowledgeBtn_Click"/>
        <Button x:Name="ActivityBtn" Content="Activity" HorizontalAlignment="Center" Margin="200,150,0,0" VerticalAlignment="Top" Height="35" FontSize="20" Width="110" Click="ActivityBtn_Click"/>
    </Grid>
</Window>
