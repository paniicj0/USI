<Window x:Class="LangLang.View.GivePenaltyPoint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        Loaded="GivePenaltyPointWindow_Loaded"
        Title="Give Penalty Point" Height="200" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Choose a reason for giving a penalty point:" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <ComboBox x:Name="cbMessage" Grid.Row="1" Width="300" FontSize="16" Margin="0,0,0,10" VerticalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="btnGive" Content="Give" Width="120" FontSize="16" Margin="5" Click="btnGive_Click"/>
        </StackPanel>
    </Grid>
</Window>

