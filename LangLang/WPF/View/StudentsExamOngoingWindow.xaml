<Window x:Class="LangLang.View.StudentsExamOngoingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        Loaded="StudentsExamOngoingWindow_Loaded"
        Title="StudentsExamOngoingWindow"  Height="450" Width="800">
    <Grid>
        <Label Content="Students:" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Height="35" FontSize="20"/>

        <DataGrid x:Name="dgvStudents" Height="200" Margin="0,30,0,0"  HorizontalAlignment="Center" CanUserResizeRows="False" CanUserResizeColumns="False"  SelectedCellsChanged="dgvStudents_SelectedCellsChanged" SelectionMode="Single"/>

        <Button x:Name="btnBan" Content="Ban" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top"  FontSize="20" Click="btnBan_Click"/>

    </Grid>
</Window>
