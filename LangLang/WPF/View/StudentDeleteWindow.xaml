<Window x:Class="LangLang.View.StudentDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="StudentDeleteWindow" Height="250" Width="470">
    <Grid>
        <Label Content="Are you sure you want to delete your account?" HorizontalAlignment="Center" Height="35" Margin="0,50,0,0" VerticalAlignment="Top"  FontWeight="Bold" FontSize="20"/>
        <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" Height="35" Margin="100,120,0,0" VerticalAlignment="Top" FontSize="20" Width="80" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="No" HorizontalAlignment="Right" Height="35" Margin="0,120,100,0" VerticalAlignment="Top" FontSize="20" Width="80" Click="btnNo_Click"/>

    </Grid>
</Window>