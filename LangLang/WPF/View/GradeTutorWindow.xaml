<Window x:Class="LangLang.View.GradeTutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="GradeTutorWindow" Height="250" Width="400">
    <Grid>
        <Label Content="Enter a grade for tutor: " HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Height="35" FontFamily="20"/>
        <Button x:Name="btnSumbit" Content="Submit" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Click="btnSumbit_Click"/>
        <ComboBox x:Name="cbGrades" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
